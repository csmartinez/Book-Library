<div class="container">

  <form action="/" method="post">
    <h1>Add a BOOK to the LIBRARY</h1>
    <hr>
    <div class="label-group">
      <label name="title">Title</label>
      <input name="title" type="text" placeholder="Title"/>
    </div>
    <div class="label-group">
      <label name="author">Author</label>
      <input name="author" type="text" placeholder="Author name"/>
    </div>
    <button type="submit">Submit</button>
    <button type="reset">Reset</button>
  </form>

  <h1>Here are your books</h1>

  <ul>
  <% @books.each() do |book| %>
    <li><%= book.title() %> by <%= book.author() %></li>
    <% end %>
  </ul>

  <form action="/search" method="post">
    <h1>Search for a BOOK</h1>
    <label name="search_by">Search by</label>
    <select name="search_by">
      <option value="title">Title</option>
      <option value="author" selected>Author</option>
    </select>
    <label name="search_term">Search for</label>
    <input name="search_term" type="text" placeholder="Your search term"/>
    <button type="submit">Submit</button>
    <button type="reset">Reset</button>
  <form>

</div><!--close container -->
